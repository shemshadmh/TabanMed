
@using Application.Extensions
@model IEnumerable<Application.Dtos.MedicalCenters.MedicalServices.MedicalServiceForCheckBox>

@if (Model != null && Model.Any(medicalService=>medicalService.ParentId != null))
{
    
    foreach (var category in Model
        .Where(c => c.ParentId == null))
    {
        
        @if (Model.Any(c => c.ParentId == category.Value))
        {
            <h5>@category.Title</h5>
            foreach (var medicalService in Model.Where(c => c.ParentId == category.Value))
            {
                <ul class="">
                    <li class="">
                        <i class=""></i> @medicalService.Title
                    </li>
                </ul>
            }
            <hr/>
        }
        
        
    }
}
else
{
    <h6>@string.Empty.NotingRegisteredIfNull()</h6>
}
<a class="btn btn-warning edit-hotel-Facilities text-white">ویرایش خدمات درمانی</a>