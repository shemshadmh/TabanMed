@using Application.Dtos.Application
@using Application.Dtos.MedicalCenters
@using Resources.DataDictionary
@{
    ViewData[AppConstants.ViewDataTitlePageName] = UIElements.Details;
    ViewData[AppConstants.ViewDataControllerName] = UIElements.MedicalCenterList;
    ViewData[AppConstants.ViewDataControllerRoute] = "MedicalCenters";
}

@model MedicalCenterDetailsDto

<div class="row">
    <!-- Column -->
    <div class="col-lg-4 col-xlg-3 col-md-5">
        <div class="card">
            <div class="card-body">
                <center class="m-t-30">
                    <img src="@Model.ImageUrl" class="img-thumbnail w-100">
                    <h4 class="card-title m-t-10">@Model.PhoneNumber</h4>
                    <h6 class="card-subtitle">@Model.AgentPhoneNumber</h6>
                </center>
                <div class="row">
                    <div class="col-md-3 col-xs-6 b-r">
                        <strong>@UIElements.City</strong>
                        <br>
                        <p class="text-muted">@Model.CityName</p>
                    </div>
                </div>
            </div>
            <div>
                <div class="card-footer">
                    <div class="text-left">
                        <a  href="javascript:void(0)" class="back-btn btn btn-primary">بازگشت</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Column -->
    <!-- Column -->
    <div class="col-lg-8 col-xlg-9 col-md-7">
        <div class="card">
            <div class="card-body">
                <!-- Tabs -->
            <ul class="nav nav-pills custom-pills" id="pills-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active show" id="pills-timeline-tab" data-toggle="pill" href="#Fa" role="tab" aria-controls="pills-timeline" aria-selected="true">فارسی</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-setting-tab" data-toggle="pill" href="#En" role="tab" aria-controls="pills-setting" aria-selected="false">انگلیسی</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-setting-tab" data-toggle="pill" href="#Ar" role="tab" aria-controls="pills-setting" aria-selected="false">عربی</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-setting-tab" data-toggle="pill" href="#Af" role="tab" aria-controls="pills-setting" aria-selected="false">دری</a>
                </li>
            </ul>
            <!-- Tabs -->
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade active show" id="Fa" aria-labelledby="pills-timeline-tab">
                    <div class="card-body">
                        <div class="col-md-3 col-xs-6 b-r">
                            <strong>@DataDictionary.Name</strong>
                            <br>
                            <p class="text-muted">@Model.MedicalCenterTranslations.FirstOrDefault((medicalCenter=>medicalCenter.LanguageId==AppConstants.FaLanguageLcid))!.Name</p>
                        </div>
                        <div class="col-md-3 col-xs-6 b-r">
                            <strong>@DataDictionary.Address</strong>
                            <br>
                            <p class="text-muted">@Model.MedicalCenterTranslations.FirstOrDefault((medicalCenter=>medicalCenter.LanguageId==AppConstants.FaLanguageLcid))!.Address</p>
                        </div>

                    </div>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">ویرایش</a>
                </div>
            </div>
            </div>
        </div>
    </div>
    <!-- Column -->

</div>
