{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=.;Initial Catalog=TabanMedDb;Integrated Security=True;MultipleActiveResultSets=True"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Settings.Configuration",
      "Serilog.Sinks.Seq",
      "Serilog.Enrichers.ClientInfo",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore.Authentication": "Warning",
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console",
          "outputTemplate": "Log=> [{Timestamp:MM-dd HH:mm:ss zzz} {Level:u3}] [{UserName} {ClientIp} {ClientAgent}]{NewLine}{Message:lj}{NewLine} {Exception}{NewLine}"
        }
      },
      {
        "Name": "File", // store logs in a file per day.
        "Args": {
          "path": "logs/logs.txt",
          "rollingInterval": "Day", // log file per day
          "rollOnFileSizeLimit": true, // new log file on size limit reached
          "retainedFileCountLimit": 10,
          "fileSizeLimitBytes": 20000000, // 20mb
          "buffered": true,
          "outputTemplate": "=> [{Timestamp:yyyy-MM-dd HH:mm:ss zzz} {Level}]{NewLine}<s:{SourceContext}> [{UserName} {ClientIp} {ClientAgent}]{NewLine}{Message:lj} {NewLine} {Exception}"
          //,"shared": true

        }
      }
      //,{
      //  "Name": "Seq",
      //  "Args": {
      //    "serverUrl": "http://localhost:5341",
      //    "apiKey": "XENktvw8hBjVtilrSeYe"
      //  }
      //}
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithProcessId",
      "WithClientIp",
      "WithClientAgent"
    ],
    "Properties": {
      "Application": "TabanMed.Admin",
      "MachineName": "%COMPUTERNAME%"
    }
  }
}
