                    </div>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-medicalCenterId="@Model.Id" asp-route-langId="@AppConstants.EnLanguageLcid">ویرایش</a>
                </div>
                
                <div class="tab-pane fade" id="Ar" aria-labelledby="pills-timeline-tab">
                    <div class="card-body">
                        <div class="col-md-3 col-xs-6 b-r">
                            <strong>@DataDictionary.Name</strong>
                            <br>
                            <p class="text-muted">@Model.MedicalCenterForEditDetailsDto.FirstOrDefault((medicalCenter => medicalCenter.LanguageId == AppConstants.ArLanguageLcid))?.Name</p>
                        </div>
                        <div class="col-md-3 col-xs-6 b-r">
                            <strong>@DataDictionary.Address</strong>
                            <br>
                            <p class="text-muted">@Model.MedicalCenterForEditDetailsDto.FirstOrDefault((medicalCenter => medicalCenter.LanguageId == AppConstants.ArLanguageLcid))?.Address</p>
                        </div>
                        <div class="col-md-3 col-xs-6 b-r">
                            <strong>@DataDictionary.AgentName</strong>
                            <br>
                            <p class="text-muted">@Model.MedicalCenterForEditDetailsDto.FirstOrDefault((medicalCenter=>medicalCenter.LanguageId==AppConstants.ArLanguageLcid))?.AgentName</p>
                        </div>
                    </div>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-medicalCenterId="@Model.Id" asp-route-langId="@AppConstants.ArLanguageLcid">ویرایش</a>
                </div>

                <div class="tab-pane fade" id="Af" aria-labelledby="pills-timeline-tab">
                    <div class="card-body">
                        <div class="col-md-3 col-xs-6 b-r">
                            <strong>@DataDictionary.Name</strong>
                            <br>
                            <p class="text-muted">@Model.MedicalCenterForEditDetailsDto.FirstOrDefault((medicalCenter => medicalCenter.LanguageId == AppConstants.AfLanguageLcid))?.Name</p>
                        </div>
                        <div class="col-md-3 col-xs-6 b-r">
                            <strong>@DataDictionary.Address</strong>
                            <br>
                            <p class="text-muted">@Model.MedicalCenterForEditDetailsDto.FirstOrDefault((medicalCenter => medicalCenter.LanguageId == AppConstants.AfLanguageLcid))?.Address</p>
                        </div>
                        <div class="col-md-3 col-xs-6 b-r">
                            <strong>@DataDictionary.AgentName</strong>
                            <br>
                            <p class="text-muted">@Model.MedicalCenterForEditDetailsDto.FirstOrDefault((medicalCenter=>medicalCenter.LanguageId==AppConstants.AfLanguageLcid))?.AgentName</p>
                        </div>
                    </div>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-medicalCenterId="@Model.Id" asp-route-langId="@AppConstants.AfLanguageLcid">ویرایش</a>
                </div>
            
            </div>
            </div>
        </div>
    </div>
    <!-- Column -->

</div>
