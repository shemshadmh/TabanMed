

@using Application.Dtos.MedicalCenters
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData[AppConstants.ViewDataTitlePageName] = UIElements.Edit;
    ViewData[AppConstants.ViewDataControllerName] = UIElements.MedicalCenter;
    ViewData[AppConstants.ViewDataControllerRoute] = "MedicalCenters";
}
@model MedicalCenterForEditDetailsDto
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post" class="needs-validation" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <h4 class="card-title text-primary">@($"ویرایش مشخصات  {Model.LanguageName}")</h4>
                            <div class="mr-3">
                                <input type="hidden" asp-for="MedicalCenterId"/>
                                <input type="hidden" asp-for="LanguageId"  />
                                <div asp-validation-summary="All"
                                     class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name"  class="form-control">
                                </div>

                                <div class="form-group">
                                    <label asp-for="Address"></label>
                                    <input asp-for="Address" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label asp-for="AgentName"></label>
                                    <input asp-for="AgentName" class="form-control">
                                </div>
                                

                                <div class="form-actions mt-3">
                                    <div class="text-left">
                                        <button type="submit" class="btn btn-warning btn-block">ویرایش</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="text-left">
                    <a href="javascript:void(0)" class="back-btn btn btn-primary">بازگشت</a>
                </div>
            </div>
        </div>
    </div>
</div>


