@model HotelTranslationForEditDto
@using Application.Dtos.Hotels.Hotels
@{
    ViewData[AppConstants.ViewDataTitlePageName] = UIElements.Edit;
    ViewData[AppConstants.ViewDataControllerName] = UIElements.Hotels;
    ViewData[AppConstants.ViewDataControllerRoute] = "Hotels";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post" class="needs-validation">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <h4 class="card-title text-primary">@($"{UIElements.Edit} {Model.LanguageName}")</h4>
                            <div class="mr-3">
                                <input type="hidden" asp-for="HotelId"/>
                                <input type="hidden" asp-for="LanguageId"  />
                                <div asp-validation-summary="All"
                                     class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name"  class="form-control">
                                </div>
                                <div class="form-group">
                                    <label asp-for="About"></label>
                                    <textarea rows="5" class="form-control" asp-for="About"></textarea>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Address"></label>
                                    <textarea rows="5" asp-for="Address" class="form-control"></textarea>
                                </div>
                                <div class="form-actions mt-3">
                                    <div class="text-left">
                                        <button type="submit" class="btn btn-warning btn-block">@UIElements.Edit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="text-left">
                    <a asp-controller="Hotels" asp-action="Details" asp-route-id="@Model.HotelId" class="btn btn-primary">@UIElements.Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


